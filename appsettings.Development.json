	"Serilog": {
		"MinimumLevel": {
        "Default": "Debug",
        "Override": {
            "Microsoft": "Error",
            "System": "Error"
        }
    },
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"],
		"Properties": {
			"Application": "App Service"
		},
		"WriteTo": [{
			"Name": "Async",
			"Args": {
				"configure": [{
					"Name": "ColoredConsole",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u4}] {SourceContext} {Message}{NewLine}{Exception}"
				},
				{ 
					"Name": "File",
					"Args": {
						"path": "logs/log.txt",
						"rollingInterval": "Day",
						"buffered": true,
						"outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u4}] {SourceContext} {Message}{NewLine}{Exception}"
					}
				}]
			},
		}]
	}
